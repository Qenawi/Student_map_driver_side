<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:id="@+id/Whole_layout"
        android:layout_height="wrap_content"
        app:carbon_elevation="@dimen/carbon_elevationCard"
        app:carbon_cornerRadius="5dp"
>
    <carbon.widget.TextView
            android:textColor="@color/carbon_black"
            android:textSize="16sp"
            android:gravity="center"
            android:id="@+id/RouteName"
            android:padding="5dp"
            android:background="@color/carbon_green_50"
            app:carbon_rippleColor="@color/carbon_yellow_a700"
            android:clickable="true"
            tools:text="Test Route1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</carbon.widget.RelativeLayout>