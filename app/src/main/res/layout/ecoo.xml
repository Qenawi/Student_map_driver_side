<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/carbon_green_50" android:layout_height="match_parent">
    <carbon.widget.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hi ! Pleas Pick Route To Start ..."
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="25sp"
            android:id="@+id/top"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/carbon_black"
            android:layout_centerInParent="true"
    />
    <carbon.widget.CheckBox android:layout_width="match_parent"
                            android:id="@+id/mCheckBox"
                            android:text="Mock Location Update ?"
                            android:textColor="@color/carbon_black"
                            android:checked="false"
                            android:layout_margin="25dp"
                            android:layout_below="@id/top"
                            android:layout_height="wrap_content"/>
    <carbon.widget.RecyclerView
            android:layout_below="@id/mCheckBox"
            android:layout_marginTop="20dp"
            android:id="@+id/Routese"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


</RelativeLayout>